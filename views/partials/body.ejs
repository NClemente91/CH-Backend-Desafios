<div class="contenedor">
  <div class="alert alert-success container-login">
    <div class="w-50 float-left">
      <h2>Bienvenido</h2>
      <h2><%= nombre %></h2>
    </div>
    <div class="float-right">
      <button class="btn btn-warning" onclick="location.href='/logout'">
        <b>Desloguear</b><br /><img src="<%= foto %>" width="75" alt="" />
      </button>
    </div>
    <b><a href="#"><%= email %></a></b>
    <h1 class="title-vista">Vista de Productos</h1>
    <div>
      <% if(productExist) { %>
      <table class="table table-dark table-striped table-format">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Foto</th>
          </tr>
        </thead>
        <tbody>
          <%productos.map(producto => { %>
          <tr>
            <td><%= producto.title %></td>
            <td><%= producto.price %></td>
            <td>
              <img
                src="<%= producto.thumbnail %>"
                alt="Imagen del producto"
                class="img-producto"
              />
            </td>
          </tr>
          <%})%>
        </tbody>
      </table>
      <% } else { %>
      <p class="no-prod">No se encontraron productos</p>
      <% } %>
    </div>
  </div>
</div>
